{
  "name": "tech-git-blog",
  "version": "1.0.0",
  "description": "A Jekyll-style static blog generator for tech content",
  "main": "generate-site.js",
  "scripts": {
    "dev": "http-server -p 3000 -c-1 --cors -a localhost",
    "build": "node generate-site.js",
    "add-post": "node add-post.js",
    "start": "npm run build && npm run dev",
    "deploy": "gh-pages -d .",
    "predeploy": "npm run build"
  },
  "dependencies": {
    "http-server": "^14.1.1"
  },
  "devDependencies": {
    "gh-pages": "^4.0.0"
  },
  "keywords": ["blog", "static-site", "generator", "tech", "web-development"],
  "author": "Miguel",
  "license": "MIT",
  "homepage": "https://yourusername.github.io/tech-git-blog"
}